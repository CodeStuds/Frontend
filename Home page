          <HeaderContentMobile />
        </div>
      </div>
    </header>
  );
}

function HeaderSection() {
  const { width } = useActiveBreakpoint();
  if (width < 800) {
    return <HeaderSectionMobile />;
  }
  if (width < 1280) {
    return <HeaderSectionTablet />;
  }
  return <HeaderSectionDesktop />;
}

export default HeaderSection;
